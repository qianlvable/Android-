<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".intentservice.IntentServiceActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/book_1"
            android:onClick="selectBook"
            android:text="日本第一"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/book_2"
            android:onClick="selectBook"
            android:text="商业的常识"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/book_3"
            android:onClick="selectBook"
            android:text="满月之夜白鲸"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.lvable.ningjiaqi.bestpracticethread.NetworkImageView
        android:id="@+id/cover_img"
        android:layout_marginTop="15dp"
        android:layout_below="@id/button_layout"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_width="180dp"
        android:layout_height="260dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tile"
        android:layout_below="@id/cover_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/author"
        android:layout_below="@id/tile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/summary"
        android:layout_below="@id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
